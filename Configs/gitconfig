[advice]
    commitBeforeMerge = false
    detachedHead = false
    pushNonFastForward = false
    resolveConflict = false
    statusHints = false

[alias]
    ### SELF-EXPLANATORY ###
    a = add
    aa = add --all
    au = add --update
    amend = commit --amend
    authors = shortlog -sn --no-merges
    br = branch -vv
    co = checkout
    cm = commit --allow-empty -m
    del = push origin --delete
    fep = fetch --prune
    lf = diff-tree --no-commit-id --name-only -r
    lines = "!git ls-files | while read f; do git blame -w -M -C -C --line-porcelain "$f" | grep -I '^author-mail '; done | cut -f2 -d'<' | cut -f1 -d'>' | sort -f | uniq -ic | sort -n"
    pb = "!git push --set-upstream origin `git rev-parse --abbrev-ref HEAD`"
    prune-tags = "!git tag -l | xargs git tag -d && git fetch -t"
    st = status --short --branch
    stashcm = stash push -m
    su = submodule update

    ### OTHERS ###
    # Which files are receiving the most "love"
    churn = !git log --all -M -C --name-only --format='format:' "$@" | sort | grep -v '^$' | uniq -c | sort | awk 'BEGIN {print "count,file"} {print $1 "," $2}'

    # lists the topmost N commits without a pager.
    l = "!git --no-pager log -25 --pretty='format:%C(yellow)%h %C(green)%ai %C(bold blue)%an %C(red)%d%C(reset) %s'; echo"


[color]
    ui = true

[color "branch"]
    current = yellow bold
    local = green bold
    remote = cyan bold

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold

[color "status"]
    added = green bold
    changed = yellow bold
    untracked = red bold

[core]
    editor = vim

[diff]
    tool = meld

[difftool]
    prompt = false

[difftool "meld"]
    cmd = meld "$REMOTE" "$LOCAL"

[push]
    default = simple

